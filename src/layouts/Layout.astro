---
import Header from "@/components/Header.astro";
import "@/styles/global.css";
import { WEBSITE_TITLE } from "@/constants.ts";
import Footer from "@/components/Footer.astro";
interface Props {
	title?: string;
	className?: string;
}
const { title = WEBSITE_TITLE, className = "" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="max-w-3xl mx-auto px-4 flex flex-col min-h-screen">
		<Header />
		<main class={`mt-10 flex-1 ${className}`}>
			<slot />
		</main>
		<Footer />
	</body>
</html>
